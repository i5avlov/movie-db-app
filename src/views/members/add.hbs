<h2>Add Member</h2> 

<form method="POST" class="form form-movie-create"> 
    <div class="form-group">
        <label for="" class="form-label">First Name</label> 
        <input name="firstName" id="" type="text" class="form-control">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Middle Name</label> 
        <input name="middleName" id="" type="text" class="form-control">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Last Name</label> 
        <input name="lastName" id="" type="text" class="form-control">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Bio</label> 
        <textarea name="bio" id="" rows="3" type="text" class="form-control"></textarea> 
    </div> 


    <div class="form-group">
        <label for="" class="form-label">Image Url</label> 
        <input name="imageUrl" id="" type="text" class="form-control">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Date of Birth</label> 
        <input name="birthdate" id="" type="text" class="form-control">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Occupation</label> 
        <select name="occupationId" class="form-control" id=""> 
            <option value="">-----------</option> 
            {{#each occupations}} 
            <option value="{{_id}}">{{title}}</option> 
            {{/each}}
        </select>
    </div> 

    <div class="button mt-4">
        <button class="btn btn-outline-success" type="submit">Add Member</button> 
    </div> 

</form> 
