<h2>Update Movie</h2> 

<form method="POST" class="form form-movie-create"> 
    <div class="form-group">
        <label for="" class="form-label">Title</label> 
        <input name="title" id="" type="text" class="form-control" value="{{movieData.title}}">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Description</label> 
        <textarea name="description" id="" type="text" class="form-control">{{movieData.description}}</textarea> 
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Image Url</label> 
        <input name="imageUrl" id="" type="text" class="form-control" value="{{movieData.imageUrl}}">
    </div> 

    <fieldset class="mt-2"> 
        <span class="form-label">Genre</span> 

        <div class="genres d-flex mt-1"> 
            {{#each genres}}
            <div class="form-group me-3">
                <input 
                    name="genreIds" 
                    value="{{_id}}" 
                    id="" 
                    type="checkbox" 
                    {{checkIfIncluded ../movieData.genres _id}}
                > 
                <label for="" class="form-label">{{name}}</label> 
            </div> 
            {{/each}} 
        </div>
    </fieldset> 

    <div class="form-group">
        <label for="" class="form-label">Category</label> 

        <select name="categoryId" id="" class="form-control"> 
            <option value="">----------</option> 
            {{#each categories}} 
            <option 
                value="{{_id}}" 
                {{selectIfEqual ../movieData.category _id}} 
            >
                {{name}}
            </option> 
            {{/each}}

        </select>
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Duration</label> 
        <input name="duration" id="" type="text" class="form-control" value="{{movieData.duration}}">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Year</label> 
        <input name="year" id="" type="text" class="form-control" value="{{movieData.year}}"> 
    </div> 

    <div class="button mt-4">
        <button class="btn btn-outline-success" type="submit">Update movie</button> 
    </div> 

</form> 
