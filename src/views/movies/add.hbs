<h2>Add Movie</h2> 

<form method="POST" class="form form-movie-create"> 
    <div class="form-group">
        <label for="" class="form-label">Title</label> 
        <input name="title" id="" type="text" class="form-control">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Description</label> 
        <textarea name="description" id="" type="text" class="form-control"></textarea> 
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Image Url</label> 
        <input name="imageUrl" id="" type="text" class="form-control">
    </div> 

    {{!-- <div class="form-group">
        <label for="" class="form-label">Genre</label> 
        <select name="genreId" id="" class="form-control"> 
            <option value="">----------</option> 
            {{#each genres}} 
            <option value="{{_id}}">{{name}}</option> 
            {{/each}}
        </select>
    </div>  --}} 

    <fieldset class="mt-2"> 
        <span class="form-label">Genre</span> 
        <div class="genres d-flex mt-1"> 
            {{#each genres}}
            <div class="form-group me-3">
                <input name="genreIds" value="{{_id}}" id="" type="checkbox"> 
                <label for="" class="form-label">{{name}}</label> 
            </div> 
            {{else}} 
            <div class=""> 
                No genres.
            </div>
            {{/each}} 
        </div>
    </fieldset>

    <div class="form-group mt-2">
        <label for="" class="form-label">Category</label> 
        <select name="categoryId" id="" class="form-control"> 
            <option value="">----------</option> 
            {{#each categories}} 
            <option value="{{_id}}">{{name}}</option> 
            {{else}} 
            <option value="" disabled>No categories.</option> 
            {{/each}}

        </select>
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Duration</label> 
        <input name="duration" id="" type="text" class="form-control">
    </div> 

    <div class="form-group">
        <label for="" class="form-label">Year</label> 
        <input name="year" id="" type="text" class="form-control"> 
    </div> 

    <div class="button mt-4">
        <button class="btn btn-outline-success" type="submit">Add movie</button> 
    </div> 

</form> 
